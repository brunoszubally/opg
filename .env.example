# Environment variables for OPG Sync Service
# Copy this file to .env and fill in your actual values

# Adalo Configuration
# App ID from your Adalo app URL
ADALO_APP_ID=3c27d7d7-fe9d-45ae-856c-27d202debf81

# Adalo API Bearer token (from Settings → App Access → API Documentation)
ADALO_API_KEY=your_adalo_api_key_here

# Users collection ID (from Adalo API documentation)
ADALO_USERS_COLLECTION_ID=t_13c9aa8bd9dd423b8118565dec7fb3de

# Daily revenues/opginvoices collection ID
ADALO_REVENUES_COLLECTION_ID=t_22imanannzgjm04zm2rbifxzm

# API Authentication
# Secret key for protecting sync endpoints
API_KEY=your_secure_api_key_here

# SFTP Configuration (optional - for storing XML files)
# If not set, XML files will only be stored in Adalo, not uploaded to SFTP
SFTP_HOST=your_sftp_server.com
SFTP_USER=your_sftp_username
SFTP_PASSWORD=your_sftp_password
SFTP_PORT=22
SFTP_BASE_PATH=/

# Web Service URL (for cron job)
WEB_SERVICE_URL=https://opg-sync-api.onrender.com

# Optional: Port for local development
PORT=5000
